@inject NavigationManager NavigationManager

<MudCard Style="height: 25em;">
    <MudCardHeader>
        <MudText Typo="Typo.h3">@ProjectTitle</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudText>
            <MudText>@Truncate(ProjectDescription, 150)</MudText>
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton OnClick="@HandleClick">Read more</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter] public required string ProjectTitle { get; set; }
    [Parameter] public required string ProjectDescription { get; set; }
    [Parameter] public required int ProjectId { get; set; }

    private void HandleClick() {
        NavigationManager.NavigateTo($"/Project/{ProjectId}");
    }

    private string Truncate(
        string value,
        int maxLength
    ) {
        if (value.Length <= maxLength) {
            return value;
        }
        
        return value.Substring(0, maxLength) + "...";
    }

}