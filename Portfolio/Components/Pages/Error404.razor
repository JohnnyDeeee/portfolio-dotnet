@page "/{*route:nonfile}"
<MudPaper Class="d-flex flex-column align-items-center justify-center" Style="height: 70vh;">
    <MudText Typo="Typo.h3" Class="mb-2">404 - Page Not Found</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">Sorry, the page you are looking for does not exist.</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => NavigationManager.NavigateTo("/"))">
        Go to Home
    </MudButton>
</MudPaper>

@code {
    [Inject] public required NavigationManager NavigationManager { get; set; }
    [Parameter] public required string Route { get; set; }
}